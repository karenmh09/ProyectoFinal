<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.RecipePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical">
                <Label Margin="10" FontSize="Medium" x:Name="RecipeCategory" VerticalOptions="CenterAndExpand" />
                <StackLayout Orientation="Horizontal">

                    <Image Margin="5" x:Name="RecipeImage" AbsoluteLayout.LayoutBounds="0,0,1,1"   AbsoluteLayout.LayoutFlags="All" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Aspect="AspectFill"/>
                    <Label Margin="5"  FontSize="Medium" x:Name="RecipeIngredients" />

                </StackLayout>

                <Label Margin="15" FontSize="Medium"  x:Name="RecipeInstructions"  VerticalOptions="CenterAndExpand" />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>